<?xml version="1.0" encoding="utf-8"?>
<!--
  Modelo mínimo de AndroidManifest.xml para empacotar este PWA via Bubblewrap/TWA.
  Substitua os valores marcados como TODO e adicione os recursos (ícones, cores, drawables)
  antes de gerar o APK.
-->
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.palavrasdia"
    android:installLocation="internalOnly">

    <uses-sdk android:minSdkVersion="23" android:targetSdkVersion="34" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Palavras do Dia"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true">

        <meta-data
            android:name="androidx.browser.trusted.DEFAULT_URL"
            android:value="https://palavras.exemplo/" />

        <activity
            android:name="com.google.androidbrowserhelper.trusted.TwaLauncherActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <meta-data
                android:name="androidx.browser.trusted.TWA_SPLASH_SCREEN_STYLE"
                android:value="true" />

            <meta-data
                android:name="androidx.browser.trusted.SPLASH_IMAGE_DRAWABLE"
                android:resource="@drawable/splash" />

            <meta-data
                android:name="androidx.browser.trusted.SPLASH_SCREEN_BACKGROUND_COLOR"
                android:resource="@color/splash_background" />
        </activity>

        <meta-data
            android:name="android.support.customtabs.trusted.DEFAULT_SHARE_TARGET"
            android:resource="@xml/share_target" />
    </application>
</manifest>
